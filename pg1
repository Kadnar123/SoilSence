  <script>
    // JavaScript to handle form submission and redirect to the next page
    document.getElementById('agriculture-form').addEventListener('submit', function(event) {
      event.preventDefault(); // Prevent the default form submission
      
      // Show modal (optional)
      const modal = document.getElementById('modal');
      modal.style.display = 'flex';
      
      // Redirect to the next page after showing the modal for a short time
      setTimeout(function() {
        window.location.href = 'next-page-url.html'; // Replace with your next page URL
      }, 2000); // Wait for 2 seconds before redirecting
    });

    // Close modal when the close button is clicked
    document.querySelector('.close-btn').addEventListener('click', function() {
      document.getElementById('modal').style.display = 'none';
    });
  </script>
